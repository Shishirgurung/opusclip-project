# Flask Backend Configuration
# URL for the Flask backend service that handles video processing and transcription
FLASK_BASE_URL=http://localhost:5000

# YouTube Download Configuration (yt-dlp)
# Maximum time in seconds to wait for YouTube video download to complete
YOUTUBE_DOWNLOAD_TIMEOUT=300

# Number of retry attempts for failed YouTube downloads
YOUTUBE_DOWNLOAD_RETRIES=3

# Video quality preference for YouTube downloads
# Options: best, worst, bestvideo, bestaudio, or specific format codes
YOUTUBE_VIDEO_QUALITY=best

# Audio quality preference for YouTube downloads
# Options: best, worst, or specific format codes like 'bestaudio[ext=m4a]'
YOUTUBE_AUDIO_QUALITY=bestaudio

# Maximum file size limit for YouTube downloads (in MB)
# Set to 0 for no limit
YOUTUBE_MAX_FILESIZE=500

# Temporary directory for storing downloaded YouTube videos
# Leave empty to use system default temp directory
YOUTUBE_TEMP_DIR=

# Network Configuration & Timeout Settings
# Connection timeout for HTTP requests to Flask backend (in milliseconds)
# HTTP_TIMEOUT=30000  # Currently not enforced in code - for future use

# Opus Video Processing Timeout (in milliseconds)
# Default: 900000 (15 minutes) - adjust based on typical video processing duration
# Longer timeouts may be needed for:
# - Large video files
# - High-resolution content  
# - Slower hardware environments
# - Complex Opus templates with extensive processing
# Implementation: src/pages/api/process-video.ts
OPUS_PROCESS_TIMEOUT_MS=900000

# Enable/disable verbose logging for YouTube downloads
# Set to 'true' to enable detailed yt-dlp logging
YOUTUBE_VERBOSE_LOGGING=false

# Security Configuration
# Maximum allowed filename length for processed files
MAX_FILENAME_LENGTH=255

# Allowed video file extensions (comma-separated)
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,webm,flv

# Redis Configuration for Job Management
# Full Redis connection URL (takes precedence over individual host/port settings)
# Format: redis://[username:password@]host:port[/database]
# For Redis Cloud: rediss://username:password@host:port
REDIS_URL=redis://localhost:6379

# Individual Redis connection settings (used if REDIS_URL is not set)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis database number (0-15, default is 0)
REDIS_DB=0

# Job Management Configuration
# Polling interval for frontend job status updates (in milliseconds)
# Lower values provide more responsive updates but increase server load
JOB_POLLING_INTERVAL_MS=2000

# Number of days to keep completed job records before automatic cleanup
# Set to 0 to disable automatic cleanup
JOB_CLEANUP_DAYS=7

# Maximum number of concurrent jobs that can be processed
# Adjust based on server capacity and Redis memory limits
MAX_CONCURRENT_JOBS=10

# Job timeout settings (in milliseconds)
# Maximum time a job can remain in QUEUED status before being marked as failed
JOB_QUEUE_TIMEOUT_MS=300000

# Maximum time a job can remain in PROCESSING status before being marked as failed
JOB_PROCESSING_TIMEOUT_MS=1800000

# Development Configuration
# Set to 'development' for additional debugging features
NODE_ENV=production

# Enable/disable CORS for cross-origin requests
ENABLE_CORS=false
